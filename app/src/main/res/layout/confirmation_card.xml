<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:contentPadding="4dp"
    app:elevation="8dp"
    app:cardCornerRadius="1dp"
    android:backgroundTint="@android:color/holo_orange_light"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/confirmation_card_ll"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 (Index)"
            android:gravity="center"
            android:padding="5dp"
            android:id="@+id/confirmation_card_index"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Sender name"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/confirmation_card_sname"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Sender skill"
                    android:gravity="center"
                    android:id="@+id/confirmation_card_skill1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="1/1/01 22:00"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/confirmation_card_date1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Receiver name"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/confirmation_card_rname"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Receiver skill"
                    android:gravity="center"
                    android:id="@+id/confirmation_card_skill2"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="1/1/01 22:00"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/confirmation_card_date2"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>